{{define "base"}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{.PageTitle}} — {{.SiteTitle}}</title>
  <link rel="stylesheet" href="css/main.css">
</head>
<body>
  <header class="header">
    <div class="header-inner">
      <div class="brand">
        <strong>{{.Therapist}}</strong>
        <div class="tag">{{.SiteTitle}}</div>
      </div>

      <button class="nav-toggle" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">☰</button>

      <nav id="main-nav" class="nav" aria-label="Main navigation">
        {{range .Pages}}<a href="{{.OutFile}}">{{.Title}}</a>{{end}}
        <a class="booking" href="{{.Booking}}" target="_blank" rel="noopener">Book Now</a>
      </nav>
    </div>
  </header>

  <main class="container">
    {{ block "content" . }}{{ end }}
  </main>

  <footer>
    <div>© {{.Year}} {{.Therapist}} — <a href="{{.Booking}}" target="_blank" rel="noopener">Book Now</a></div>
  </footer>

  <script src="js/main.js" defer></script>
</body>
</html>
{{end}}